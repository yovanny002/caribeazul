<%- include('../partials/header', { title: 'Gestión de Rutas | Nueva Ruta' }) %>

<div class="container-lg my-5">
  <div class="card shadow-lg border-0 rounded-4">
    <div class="card-header bg-primary text-white p-4 rounded-top-4">
      <div class="d-flex justify-content-between align-items-center">
        <h2 class="h4 mb-0"><i class="fas fa-route me-2"></i>Registrar Nueva Ruta</h2>
        <a href="/rutas" class="btn btn-outline-light btn-sm rounded-pill px-3">
          <i class="fas fa-arrow-left me-1"></i> Volver a Rutas
        </a>
      </div>
    </div>

    <div class="card-body p-5">
      <form action="/rutas" method="POST" class="needs-validation" novalidate>
        <div class="row g-4">
          <div class="col-md-6 border-end pe-md-4">
            <h5 class="mb-4 text-primary"><i class="fas fa-info-circle me-2"></i>Detalles Principales</h5>

            <div class="mb-3">
              <label for="nombre" class="form-label">Nombre de la Ruta <span class="badge bg-danger-subtle text-danger fw-normal ms-1">Requerido</span></label>
              <input type="text" id="nombre" name="nombre" class="form-control" required placeholder="Ej. Zona Colonial Oeste">
              <div class="invalid-feedback">Por favor, ingrese el nombre de la ruta.</div>
            </div>

            <div class="mb-3">
              <label for="codigo" class="form-label">Código de la Ruta</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-hashtag"></i></span>
                <input type="text" id="codigo" name="codigo" class="form-control" placeholder="Ej. R001">
              </div>
            </div>

            <div class="mb-3">
              <label for="zona" class="form-label">Zona Geográfica</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-map-marker-alt"></i></span>
                <input type="text" id="zona" name="zona" class="form-control" placeholder="Ej. Santo Domingo Este">
              </div>
            </div>
          </div>

          <div class="col-md-6 ps-md-4">
            <h5 class="mb-4 text-primary"><i class="fas fa-cog me-2"></i>Configuración Adicional</h5>

            <div class="mb-3">
              <label for="tipo_ruta" class="form-label">Tipo de Ruta</label>
              <select id="tipo_ruta" name="tipo_ruta" class="form-select">
                <option value="" selected disabled>-- Seleccionar Tipo --</option>
                <option value="urbana">Urbana</option>
                <option value="rural">Rural</option>
                <option value="mixta">Mixta</option>
              </select>
            </div>

            <div class="mb-3">
              <label for="color_mapa" class="form-label">Color en el Mapa</label>
              <div class="input-group">
                <span class="input-group-text"><i class="fas fa-palette"></i></span>
                <input type="color" id="color_mapa" name="color_mapa" class="form-control form-control-color" value="#007bff">
              </div>
              <small class="form-text text-muted">Elija un color para identificar la ruta en el mapa (si aplica).</small>
            </div>

            <div class="mb-3">
              <label for="descripcion" class="form-label">Descripción</label>
              <textarea id="descripcion" name="descripcion" class="form-control" rows="4" placeholder="Breve descripción de la ruta o características..."></textarea>
            </div>
          </div>

          <div class="col-12">
            <div class="d-flex justify-content-end gap-3 pt-4 border-top">
              <a href="/rutas" class="btn btn-outline-secondary rounded-pill px-4">
                <i class="fas fa-times-circle me-2"></i> Cancelar
              </a>
              <button type="submit" class="btn btn-success rounded-pill px-4 shadow">
                <i class="fas fa-save me-2"></i> Guardar Ruta
              </button>
            </div>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>

<script>
(() => {
  'use strict';

  // Deshabilitar el envío del formulario si hay campos inválidos
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    }, false);
  });
})();
</script>