<%- include('../partials/header', { title: 'Gestión de Rutas' }) %>

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0 text-primary"><i class="fas fa-map-marked-alt me-3"></i>Listado de Rutas</h2>
        <a href="/rutas/nuevo" class="btn btn-primary shadow-sm rounded-pill px-4">
            <i class="fas fa-plus-circle me-2"></i>Agregar Ruta
        </a>
    </div>

    <% if (rutas.length > 0) { %>
        <div class="card shadow-lg border-0 rounded-3">
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-hover align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th scope="col" class="py-3">Nombre</th>
                                <th scope="col" class="py-3">Zona</th>
                                <th scope="col" class="py-3">Tipo</th>
                                <th scope="col" class="py-3">Código</th>
                                <th scope="col" class="text-center py-3">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% rutas.forEach(r => { %>
                                <tr>
                                    <td><i class="fas fa-road me-2 text-muted"></i><%= r.nombre %></td>
                                    <td><i class="fas fa-map-marker-alt me-2 text-muted"></i><%= r.zona %></td>
                                    <td><i class="fas fa-tag me-2 text-muted"></i><%= r.tipo_ruta %></td>
                                    <td><i class="fas fa-hashtag me-2 text-muted"></i><%= r.codigo || '-' %></td>
                                    <td class="text-center">
                                        <a href="/rutas/editar/<%= r.id %>" class="btn btn-outline-warning btn-sm me-2 rounded-circle">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form action="/rutas/<%= r.id %>?_method=DELETE" method="POST" class="d-inline">
                                            <button type="submit" class="btn btn-outline-danger btn-sm rounded-circle" onclick="return confirm('¿Está seguro de eliminar la ruta <%= r.nombre %>?')">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                            <% }) %>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    <% } else { %>
        <div class="alert alert-info text-center py-5 rounded-3 shadow-sm" role="alert">
            <h4 class="alert-heading mb-3"><i class="fas fa-info-circle me-2"></i>¡No hay rutas registradas!</h4>
            <p class="lead">Parece que aún no tienes ninguna ruta en el sistema.</p>
            <hr>
            <p class="mb-0">¡Es un excelente momento para empezar a organizar tus zonas de cobro!</p>
            <a href="/rutas/nuevo" class="btn btn-info mt-4">
                <i class="fas fa-plus-circle me-2"></i>Añadir Nueva Ruta
            </a>
        </div>
    <% } %>
</div>

<%- include('../partials/footer') %>