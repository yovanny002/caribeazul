<%- include('../partials/header', { title: 'Listado de Préstamos Especiales' }) %>

<div class="container-fluid px-4 mt-4">
  <div class="card shadow">
    <div class="card-header bg-primary text-white py-3 d-flex justify-content-between align-items-center">
      <h3 class="mb-0"><i class="fas fa-list me-2"></i>Préstamos Especiales</h3>
      <a href="/prestamos-especiales/nuevo" class="btn btn-light text-primary">
        <i class="fas fa-plus"></i> Nuevo Préstamo
      </a>
    </div>
    <div class="card-body">
      <% if (prestamos.length === 0) { %>
        <p>No hay préstamos especiales registrados.</p>
      <% } else { %>
        <div class="table-responsive">
          <table class="table table-bordered table-hover align-middle">
            <thead class="table-primary">
              <tr>
                <th>Cliente</th>
                <th>Cédula</th>
                <th>Ruta</th>
                <th>Monto Aprobado</th>
                <th>Capital Restante</th>
                <th>Forma de Pago</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% prestamos.forEach(prestamo => { %>
                <tr>
                  <td><%= prestamo.cliente_nombre %> <%= prestamo.cliente_apellidos %></td>
                  <td><%= prestamo.cliente_cedula %></td>
                  <td><%= prestamo.ruta_nombre || 'N/A' %></td>
                  <td>RD$ <%= prestamo.monto_aprobado.toFixed(2) %></td>
                  <td>RD$ <%= prestamo.capital_restante.toFixed(2) %></td>
                  <td><%= prestamo.forma_pago %></td>
                  <td>
                    <a href="/prestamos-especiales/<%= prestamo.id %>" class="btn btn-sm btn-outline-primary">
                      <i class="fas fa-eye"></i>
                    </a>
                    <a href="/prestamos-especiales/<%= prestamo.id %>/edit" class="btn btn-sm btn-outline-warning">
                      <i class="fas fa-edit"></i>
                    </a>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
