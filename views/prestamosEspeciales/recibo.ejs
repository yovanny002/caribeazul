<%- include('../partials/header', { title: 'Recibo de Pago' }) %>

<div class="container-fluid py-4 px-4">
    <div class="card shadow-lg border-0 rounded-3 mb-4">
        <div class="card-header bg-gradient-info text-white py-4 text-center">
            <h2 class="mb-0"><i class="fas fa-receipt me-3 fa-lg"></i>Recibo de Pago de Préstamo Especial</h2>
            <p class="mb-0 fs-5 mt-2">No. de Recibo: <span class="fw-bold"><%= pago.id %></span></p>
        </div>

        <div class="card-body p-4">
            <div class="row mb-5">
                <div class="col-md-6">
                    <h4 class="text-primary mb-3">Información del Préstamo</h4>
                    <p class="mb-1"><strong>ID del Préstamo:</strong> <%= pago.prestamo_especial_id %></p>
                    <p class="mb-1"><strong>Monto Aprobado:</strong> RD$ <%= parseFloat(pago.monto_aprobado || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
                    <p class="mb-1"><strong>Tasa de Interés:</strong> <%= pago.interes_porcentaje %>%</p>
                    <p class="mb-1"><strong>Forma de Pago:</strong> <%= pago.forma_pago ? pago.forma_pago.charAt(0).toUpperCase() + pago.forma_pago.slice(1) : 'N/A' %></p>
                </div>
                <div class="col-md-6 text-md-end">
                    <h4 class="text-success mb-3">Detalles del Cliente</h4>
                    <p class="mb-1"><strong>Nombre:</strong> <%= pago.cliente_nombre %> <%= pago.cliente_apellidos %></p>
                    <p class="mb-1"><strong>Cédula:</strong> <%= pago.cliente_cedula %></p>
                    <p class="mb-1"><strong>Ruta/Zona:</strong> <%= pago.ruta_zona && pago.ruta_nombre ? `${pago.ruta_zona} - ${pago.ruta_nombre}` : 'No asignada' %></p>
                </div>
            </div>

            <hr class="my-5">

            <div class="text-center mb-5">
                <h3 class="text-dark mb-4">Monto del Pago Recibido</h3>
                <p class="display-4 fw-bold text-success">RD$ <%= parseFloat(pago.monto || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></p>
                <p class="fs-5 text-muted">En la fecha: <span class="fw-bold"><%= pago.fecha_formatted %></span></p>
            </div>

            <div class="row justify-content-center mb-5">
                <div class="col-md-8">
                    <h4 class="text-primary mb-3 text-center">Desglose del Pago</h4>
                    <ul class="list-group list-group-flush shadow-sm rounded-3">
                        <li class="list-group-item d-flex justify-content-between align-items-center fs-5 py-3">
                            Capital Pagado:
                            <span class="fw-bold text-primary">RD$ <%= parseFloat(pago.capital_pagado || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center fs-5 py-3">
                            Interés Pagado:
                            <span class="fw-bold text-info">RD$ <%= parseFloat(pago.interes_pagado || 0).toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 }) %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center fs-5 py-3">
                            Método de Pago:
                            <span class="fw-bold"><%= pago.metodo ? pago.metodo.charAt(0).toUpperCase() + pago.metodo.slice(1) : 'N/A' %></span>
                        </li>
                        <li class="list-group-item d-flex justify-content-between align-items-center fs-5 py-3">
                            Registrado Por:
                            <span class="fw-bold"><%= pago.registrado_por %></span>
                        </li>
                    </ul>
                </div>
            </div>

            <hr class="my-5">

            <div class="text-center mt-4">
                <a href="/prestamos-especiales/<%= pago.prestamo_especial_id %>" class="btn btn-info btn-lg shadow-sm me-3">
                    <i class="fas fa-arrow-left me-2"></i>Volver al Préstamo
                </a>
                <button onclick="window.print()" class="btn btn-secondary btn-lg shadow-sm">
                    <i class="fas fa-print me-2"></i>Imprimir Recibo
                </button>
            </div>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>

<style>
    /* Estilos adicionales para un toque profesional */
    .bg-gradient-info {
        background: linear-gradient(45deg, #17a2b8, #117a8b); /* Info blue gradient */
    }
    .card-header h2 {
        font-weight: 600;
    }
    .display-4 {
        font-size: 3.5rem;
    }
    .list-group-item {
        border-color: #e9ecef;
    }
    @media print {
        body * {
            visibility: hidden;
        }
        .card, .card * {
            visibility: visible;
        }
        .card {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
            border: none !important;
            box-shadow: none !important;
        }
        .btn {
            display: none !important;
        }
    }
</style>