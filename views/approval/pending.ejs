    letter-spacing: 0.5px;
    color: #6c757d;
  }

  .btn-light {
    background-color: white;
    border: 1px solid #dee2e6;
  }

  .btn-light:hover {
    background-color: #f8f9fa;
  }

  .form-control:focus, .form-select:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 0.25rem rgba(67, 97, 238, 0.25);
  }

  .input-group-text {
    background-color: #f8f9fa;
  }
</style>

<script>
// Debug: Verificar que los datos llegaron correctamente
console.log('Datos recibidos en vista:', <%- JSON.stringify(loans) %>);

// Función para inicializar los modales y eventos
function initializeLoanActions() {
  // Inicializar modales de Bootstrap
  const approvalModal = new bootstrap.Modal(document.getElementById('approvalModal'));
  const rejectionModal = new bootstrap.Modal(document.getElementById('rejectionModal'));
  
  // Delegación de eventos para manejar clics en botones
  document.addEventListener('click', function(e) {
    // Manejar clic en botones de aprobar
    if (e.target.closest('.approve-btn')) {
      e.preventDefault();
      const button = e.target.closest('.approve-btn');
      const loanId = button.getAttribute('data-id');
      const loanType = button.getAttribute('data-type');
      
      console.log(`Intentando aprobar préstamo ${loanId} (${loanType})`);
      
      // Configurar el formulario según el tipo de préstamo
      const interestField = document.getElementById('interestRateField');
      interestField.style.display = loanType === 'normal' ? 'block' : 'none';
      
      // Establecer la acción del formulario
      const approvalForm = document.getElementById('approvalForm');
      approvalForm.action = `/${loanType === 'normal' ? 'prestamos' : 'prestamos-especiales'}/${loanId}/aprobar`;
      
      // Mostrar el modal
      approvalModal.show();
    }
    
    // Manejar clic en botones de rechazar
    if (e.target.closest('.reject-btn')) {
      e.preventDefault();
      const button = e.target.closest('.reject-btn');
      const loanId = button.getAttribute('data-id');
      const loanType = button.getAttribute('data-type');
      
      console.log(`Intentando rechazar préstamo ${loanId} (${loanType})`);
      
      // Establecer la acción del formulario
      const rejectionForm = document.getElementById('rejectionForm');
      rejectionForm.action = `/${loanType === 'normal' ? 'prestamos' : 'prestamos-especiales'}/${loanId}/rechazar`;
      
      // Mostrar el modal
      rejectionModal.show();
    }
  });

  // Validación del formulario de aprobación
  document.getElementById('approvalForm').addEventListener('submit', function(e) {
    const amount = parseFloat(document.getElementById('approvedAmount').value);
    if (!amount || amount <= 0) {
      e.preventDefault();
      alert('Por favor ingrese un monto válido mayor a cero');
    }
  });

  // Validación del formulario de rechazo
  document.getElementById('rejectionForm').addEventListener('submit', function(e) {
    const reason = document.getElementById('rejectionReason').value.trim();
    if (!reason) {
      e.preventDefault();
      alert('Por favor ingrese un motivo de rechazo');
    }
  });
}

// Inicializar cuando el DOM esté listo
document.addEventListener('DOMContentLoaded', initializeLoanActions);
</script>