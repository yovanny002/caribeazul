<%- include('../partials/header', { title: 'Prestamos pendientes' }) %>
<div class="container-fluid px-4 py-4">
  <!-- Debugging info (puedes quitarlo después) -->
  <div class="alert alert-warning mb-4">
    <h4>Información de Depuración</h4>
    <p>Total de préstamos recibidos: <strong><%= loans.length %></strong></p>
    <button class="btn btn-sm btn-secondary" onclick="console.log(<%- JSON.stringify(loans) %>)">
      Mostrar datos en consola
    </button>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <div>
      <h1 class="mt-4 mb-0 fw-bold text-gradient-primary">Solicitudes Pendientes</h1>
      <p class="text-muted mb-0">Revisa y gestiona las solicitudes de préstamos</p>
    </div>
    <div>
      <a href="/dashboard" class="btn btn-light rounded-pill px-4 border">
        <i class="fas fa-arrow-left me-2"></i> Volver
      </a>
    </div>
  </div>

  <% if (!loans || loans.length === 0) { %>
    <div class="empty-state">
      <div class="empty-state-icon">
        <i class="fas fa-check-circle"></i>
      </div>
      <h3>¡Todo al día!</h3>
      <p class="text-muted">No hay solicitudes pendientes de aprobación en este momento.</p>
      <a href="/prestamos/nuevo" class="btn btn-primary rounded-pill px-4">
        <i class="fas fa-plus me-2"></i> Crear nuevo préstamo
      </a>
    </div>
  <% } else { %>
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Tipo</th>
                <th>Cliente</th>
                <th>Monto</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% loans.forEach(loan => { %>
                <tr class="loan-item">
                  <td>
                    <span class="badge <%= loan.loanType === 'normal' ? 'bg-primary' : 'bg-warning text-dark' %>">
                      <i class="fas <%= loan.icon %> me-2"></i>
                      <%= loan.displayType %>
                    </span>
                  </td>
                  <td>
                    <%= loan.cliente_nombre %> <%= loan.cliente_apellidos %>
                  </td>
                  <td>
                    <%= helpers.formatCurrency(loan.monto_aprobado) %>
                  </td>
                  <td>
                    <%= helpers.formatDate(loan.fecha_creacion) %>
                  </td>
                  <td>
                    <span class="badge bg-info"><%= loan.estado %></span>
                  </td>
                  <td>
                    <div class="d-flex gap-2">
                      <button 
                        class="btn btn-sm btn-success approve-btn"
                        data-id="<%= loan.id %>"
                        data-type="<%= loan.loanType %>"
                      >
                        <i class="fas fa-check me-1"></i> Aprobar
                      </button>
                      <button 
                        class="btn btn-sm btn-danger reject-btn"
                        data-id="<%= loan.id %>"
                        data-type="<%= loan.loanType %>"
                      >
                        <i class="fas fa-times me-1"></i> Rechazar
                      </button>
                    </div>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% } %>
</div>

<!-- Modales (se mantienen igual) -->
<div class="modal fade" id="approvalModal" tabindex="-1" aria-hidden="true">
  <!-- ... contenido del modal de aprobación ... -->
</div>

<div class="modal fade" id="rejectionModal" tabindex="-1" aria-hidden="true">
  <!-- ... contenido del modal de rechazo ... -->
</div>

<%- include('../partials/footer') %>

<style>
  /* Tus estilos actuales se mantienen */
  .loan-item:hover {
    background-color: rgba(67, 97, 238, 0.05);
  }
  
  /* Nuevos estilos añadidos */
  .table-responsive {
    max-height: 70vh;
    overflow-y: auto;
  }
  
  .badge {
    font-size: 0.85rem;
    font-weight: 500;
    padding: 0.35em 0.65em;
  }
</style>

<script>
// Debug: Ver datos en consola
console.log('Datos recibidos en vista:', <%- JSON.stringify(loans) %>);

document.addEventListener('DOMContentLoaded', function() {
  // Inicializar modales
  const approvalModal = new bootstrap.Modal('#approvalModal');
  const rejectionModal = new bootstrap.Modal('#rejectionModal');
  
  // Manejar botones de aprobar
  document.querySelectorAll('.approve-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const loanId = this.dataset.id;
      const loanType = this.dataset.type;
      const form = document.getElementById('approvalForm');
      
      // Configurar formulario según tipo
      document.getElementById('interestRateField').style.display = 
        loanType === 'normal' ? 'block' : 'none';
      
      form.action = `/${loanType === 'normal' ? 'prestamos' : 'prestamos-especiales'}/${loanId}/aprobar`;
      approvalModal.show();
    });
  });

  // Manejar botones de rechazar
  document.querySelectorAll('.reject-btn').forEach(btn => {
    btn.addEventListener('click', function() {
      const loanId = this.dataset.id;
      const loanType = this.dataset.type;
      const form = document.getElementById('rejectionForm');
      
      form.action = `/${loanType === 'normal' ? 'prestamos' : 'prestamos-especiales'}/${loanId}/rechazar`;
      rejectionModal.show();
    });
  });
});
</script>