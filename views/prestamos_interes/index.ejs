<%- include('../partials/header') %>
<%- include('../partials/flash') %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Préstamos por Interés</h1>
    <a href="/prestamos_intereses/create" class="btn btn-primary">Nuevo Préstamo</a>
  </div>

  <div class="card mb-4">
    <div class="card-header">
      <div class="row">
        <div class="col-md-6">
          <form class="form-inline">
            <select name="estado" class="form-control mr-2" onchange="this.form.submit()">
              <option value="">Todos los estados</option>
              <option value="pendiente" <%= estadoFiltro === 'pendiente' ? 'selected' : '' %>>Pendientes</option>
              <option value="pagado" <%= estadoFiltro === 'pagado' ? 'selected' : '' %>>Pagados</option>
            </select>
          </form>
        </div>
      </div>
    </div>

    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-striped table-hover">
          <thead>
            <tr>
              <th>Cliente</th>
              <th>Cédula</th>
              <th>Monto</th>
              <th>Interés</th>
              <th>Saldo</th>
              <th>Estado</th>
              <th>Fecha</th>
              <th>Acciones</th>
            </tr>
          </thead>
          <tbody>
            <% prestamos.forEach(prestamo => { %>
              <tr>
                <td><%= prestamo.cliente_nombre %> <%= prestamo.cliente_apellidos %></td>
                <td><%= prestamo.cliente_cedula %></td>
                <td>RD$ <%= prestamo.monto_aprobado.toFixed(2) %></td>
                <td><%= prestamo.interes_porcentaje %>%</td>
                <td>RD$ <%= (prestamo.saldo_capital || prestamo.monto_aprobado).toFixed(2) %></td>
                <td>
                  <span class="badge <%= prestamo.estado === 'pendiente' ? 'bg-warning' : 'bg-success' %>">
                    <%= prestamo.estado === 'pendiente' ? 'Pendiente' : 'Pagado' %>
                  </span>
                </td>
                <td><%= moment(prestamo.created_at).format('DD/MM/YYYY') %></td>
                <td>
                  <a href="/prestamos_interes/<%= prestamo.id %>" class="btn btn-sm btn-info">Ver</a>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>