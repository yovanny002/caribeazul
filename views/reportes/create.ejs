<%- include('../partials/header', { title: 'Gestión de Préstamos' }) %>

<div class="container mt-4">
  <h2>Registrar Gasto de Caja</h2>

  <form action="/reportes/gastos" method="POST">
    <div class="mb-3">
      <label for="descripcion" class="form-label">Descripción</label>
      <input type="text" class="form-control" name="descripcion" required>
    </div>

    <div class="mb-3">
      <label for="monto" class="form-label">Monto (RD$)</label>
      <input type="number" step="0.01" min="0.01" class="form-control" name="monto" required>
    </div>

    <div class="mb-3">
      <label for="categoria" class="form-label">Categoría (opcional)</label>
      <input type="text" class="form-control" name="categoria">
    </div>

    <button type="submit" class="btn btn-success">Guardar Gasto</button>
  </form>
</div>
