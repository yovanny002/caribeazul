<!-- views/contratos_hipotecarios/index.ejs -->
<div class="container mt-4">
    <h1 class="mb-4">
        <i class="fas fa-file-contract me-2"></i> Contratos Hipotecarios
    </h1>

    <a href="/contratos-hipotecarios/create" class="btn btn-primary mb-4">
        <i class="fas fa-plus-circle me-2"></i>Nuevo Contrato
    </a>

    <div class="card shadow">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Deudor</th>
                        <th>Documento</th>
                        <th>Fecha</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (hipotecas.length === 0) { %>
                        <tr>
                            <td colspan="5" class="text-center py-4">No hay contratos registrados.</td>
                        </tr>
                    <% } else { %>
                        <% hipotecas.forEach(h => { %>
                            <tr>
                                <td><%= h.id %></td>
                                <td><%= h.deudor %></td>
                                <td><%= h.documento %></td>
                                <td><%= h.created_at.toLocaleDateString() %></td>
                                <td class="text-center">
                                    <a href="/contratos-hipotecarios/<%= h.id %>" class="btn btn-info btn-sm me-1">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="/contratos-hipotecarios/<%= h.id %>/print" class="btn btn-secondary btn-sm me-1" target="_blank">
                                        <i class="fas fa-print"></i>
                                    </a>
                                    <a href="/contratos-hipotecarios/<%= h.id %>/download" class="btn btn-success btn-sm">
                                        <i class="fas fa-download"></i>
                                    </a>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
