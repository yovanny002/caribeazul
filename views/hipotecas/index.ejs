<%- include('../partials/header', { title: 'Generar Contrato de Préstamo Hipotecario' }) %>

<div class="container mt-5">

    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h1 class="display-6 fw-bold text-dark">
            <i class="fas fa-file-contract me-3 text-primary"></i> Contratos Hipotecarios
        </h1>
        <a href="/contratos-hipotecarios/create" class="btn btn-primary btn-lg shadow-sm">
            <i class="fas fa-plus-circle me-2"></i> Nuevo Contrato
        </a>
    </div>

    <div class="card border-0 shadow-lg rounded-3">
        <div class="card-body p-0">
            <table class="table table-hover mb-0">
                <thead class="bg-light text-secondary border-bottom border-secondary border-opacity-25">
                    <tr>
                        <th scope="col" class="py-3 ps-4">ID</th>
                        <th scope="col" class="py-3">Deudor</th>
                        <th scope="col" class="py-3">Documento</th>
                        <th scope="col" class="py-3">Fecha de Creación</th>
                        <th scope="col" class="py-3 text-center pe-4">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (hipotecas.length === 0) { %>
                        <tr>
                            <td colspan="5" class="text-center py-5 text-muted">
                                <i class="fas fa-box-open me-2"></i> No hay contratos registrados.
                            </td>
                        </tr>
                    <% } else { %>
                        <% hipotecas.forEach(h => { %>
                            <tr class="align-middle">
                                <td class="ps-4 text-muted"><%= h.id %></td>
                                <td class="fw-semibold"><%= h.deudor %></td>
                                <td><%= h.documento %></td>
                                <td class="text-sm"><%= h.created_at.toLocaleDateString() %></td>
                                <td class="text-center pe-4">
                                    <div class="btn-group" role="group" aria-label="Acciones de Contrato">
                                        <a href="/contratos-hipotecarios/<%= h.id %>" 
                                            class="btn btn-outline-info btn-sm" 
                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Ver Detalles">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/contratos-hipotecarios/<%= h.id %>/print" 
                                            class="btn btn-outline-secondary btn-sm" 
                                            target="_blank"
                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Imprimir">
                                            <i class="fas fa-print"></i>
                                        </a>
                                        <a href="/contratos-hipotecarios/<%= h.id %>/download" 
                                            class="btn btn-outline-success btn-sm"
                                            data-bs-toggle="tooltip" data-bs-placement="top" title="Descargar PDF">
                                            <i class="fas fa-download"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        <% }) %>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>
<%- include('../partials/footer') %>